<div class="table-responsive">
    <table class="table table-striped table-bordered" style="width: auto">
        <thead>
        <tr>
            <th>Unit Signature</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Small</td>
            <td>{{small}}</td>
        </tr>
        <tr>
            <td>Medium</td>
            <td>{{medium}}</td>
        </tr>
        <tr>
            <td>Large</td>
            <td>{{large}}</td>
        </tr>
        </tbody>
        <tfoot>
        <tr>
            <th class="text-end">Total:</th>
            <th>{{sum small medium large}}</th>
        </tr>
        </tfoot>
    </table>
</div>
