<div class="table-responsive">
    <table class="table table-bordered table-striped {{class}}">
        <thead>
        <tr>
            <th colspan="3">
                {{faction}}: <span class="text-weight-normal">{{name}}</span>
            </th>
        </tr>
        <tr>
            <th>Unit</th>
            <th>SIG</th>
            <th>Count</th>
        </tr>
        </thead>
        <tbody>
        {{#each units}}
            <tr>
                <td>{{unit.name}}{{#if unit.variant_name}}: {{unit.variant_name}}{{/if}}</td>
                <td>{{unit.signature}}</td>
                <td>{{count}}</td>
            </tr>
        {{/each}}
        </tbody>
        {{!--
        <tfoot>
         <tr>
             <th colspan="2" class="text-end">Small Total</th>
             <th> {{smallCount}}</th>
         </tr>
         <tr>
             <th colspan="2" class="text-end">Medium Total</th>
             <th> {{mediumCount}}</th>
         </tr>
         <tr>
             <th colspan="2" class="text-end">Large Total</th>
             <th> {{largeCount}}</th>
         </tr>
         <tr>
             <th colspan="2" class="text-end">Total</th>
             <th> {{modelCount}}</th>
         </tr>
         </tfoot>
         --}}
    </table>
</div>
