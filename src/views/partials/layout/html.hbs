<!doctype html>
<html lang="en">
<head>
    {{#if ENV_PRODUCTION}}
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-B8V72ZR91W"></script>
        <script>
            window.dataLayer = window.dataLayer || []

            function gtag() {
                dataLayer.push(arguments)
            }

            gtag('js', new Date())

            gtag('config', 'G-B8V72ZR91W')
        </script>
    {{/if}}

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">

    {{#block 'meta'}}
    {{/block}}

    <title>{{title}}</title>

    {{#block 'main-style-before'}}{{/block}}
    <link rel="stylesheet" href="/assets/css/main.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;600;700&family=Bitter:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
        rel="stylesheet">

</head>
{{#block 'body-open'}}
    <body class="d-flex flex-column page-body {{optional body_class}}">
{{/block}}

{{#block 'nav'}}
    {{> layout/nav}}
{{/block}}

<main class="main-content flex-shrink-0">
    {{#block 'page-content'}}{{/block}}
</main>

{{#block 'page-content-after'}}{{/block}}

{{#block 'footer'}}
    {{> layout/footer}}
{{/block}}

{{#block 'body-end-script'}}
    <script src="/assets/js/main.js"></script>
{{/block}}

{{#block 'body-close-before'}}{{/block}}

{{#block 'body-close'}}
    </body>
{{/block}}
