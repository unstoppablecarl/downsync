{{#extend 'layout/html' title=pageTitle body_class='body-print'}}

    {{#content 'page-content'}}

        {{#> cards-print-header
            title='Unit Cards'
            print_all_url='/unit-cards-print.html'
        }}

            {{#*inline 'view_url'}}
                {{~#if faction~}}
                    /unit-cards.html#{{faction_slug}}
                    {{~else~}}
                    /unit-cards.html
                {{~/if~}}
            {{/inline}}

            {{#*inline 'print_url'}}
                {{~#if faction~}}
                    /cards-print/{{faction_slug}}.html
                    {{~else~}}
                    /unit-cards-print.html
                {{~/if~}}
            {{/inline}}

            {{#*inline 'pdf_url'}}
                {{~#if faction~}}
                    /assets/pdfs/{{faction_slug}}-cards-print.pdf
                    {{~else~}}
                    /assets/pdfs/unit-cards-print.pdf
                {{~/if~}}
            {{/inline}}

            {{#*inline 'other_faction_print_url'}}/cards-print/{{slug}}.html{{/inline}}

        {{/cards-print-header}}

        <div class="page-previews-container" data-bs-theme="light">
            <div class="output-container card-grid-container-to-scale-print">
                {{#each cardPages as |cardPage|}}

                    <div class="page-preview page-letter" style="background-color:white">
                        <div class="page-card-grid">
                            {{#each cardPage as |cardData|}}
                                {{> (lookup cardData 'template') cardData}}
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

    {{/content}}
{{/extend}}

