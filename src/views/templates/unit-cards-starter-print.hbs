{{#extend 'layout/html' title='Starter Unit Cards Print' body_class="body-print"}}

    {{#content 'page-content'}}
        {{> unit-cards-starter-header current_view='Print'}}

        <div class="page-previews-container" data-bs-theme="light">
            <div class="output-container card-grid-container-to-scale-print">
                {{#each factionCards as |fac|}}
                    {{#each cardPages as |cardPage|}}
                        <div class="page-preview page-letter faction-{{fac.faction_slug}}"
                             style="background-color:white">
                            <div class="page-card-grid">
                                {{#each cardPage as |cardData|}}
                                    {{> (lookup cardData 'template') cardData}}
                                {{/each}}
                            </div>
                        </div>
                    {{/each}}
                {{/each}}
            </div>
        </div>

    {{/content}}

{{/extend}}
