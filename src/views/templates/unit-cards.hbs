{{#extend 'layout/html' title='Unit Cards'}}

    {{#content 'page-content'}}

        <div class="header">
            <div class="container-ex">
                <h1>Downsync Unit Cards</h1>
                <div class="row">
                    <div class="col">
                        <div id="vue-card-filter" class="my-1 me-1 d-inline-block"></div>
                        {{> btn-cards-view view='Web'}}
                    </div>
                    <div class="col">

                    </div>
                </div>
            </div>
        </div>

        <div class="web-cards primary-content">
            {{#each cardData}}
                <div class="faction-{{faction_slug}}">

                    <div class="container">
                        <h2 class="faction-heading">{{faction}}</h2>
                    </div>
                    <div class="faction-cards">
                        {{#each factionCards as |singleCardData|}}
                            {{> (lookup singleCardData 'template') singleCardData}}
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>

    {{/content}}
{{/extend}}

