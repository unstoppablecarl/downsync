{{#extend 'layout/html' title='Downsync' body_class='page-quick-reference'}}

    {{#content 'page-content'}}
        <div class="container">
            <h1>Downsync Quick Reference</h1>
        </div>
        <div class="container container-quick-reference">
            <div class="row">
                <div class="section col">
                    <h3>{{taskforceActivationPhases.heading}}</h3>
                    {{{taskforceActivationPhases.content}}}
                </div>

                <div class="section col-md-4">
                    <h3>Unit Tokens</h3>
                    <div class="table-responsive">
                        <table class="table table-borderless table-width-auto table-sm">
                            <tbody>
                            {{#each TOKENS}}
                                <tr>
                                    <th>{{name}}</th>
                                    <td>
                                        <span class="{{#if shadow}}token-shadow{{/if}}"
                                              style="color:{{color}}">&#9632;</span>
                                        {{color_label}}
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="section col">
                    <h3>{{commandPoints.heading}}</h3>
                    {{{commandPoints.content}}}
                </div>
            </div>
            <div class="row">
                <div class="section col-md-6">
                    <h3>{{attacks.heading}}</h3>
                    {{{attacks.content}}}
                </div>
                <div class="section col-md-6">
                    <h3>{{scanCheck.heading}}</h3>
                    {{{scanCheck.content}}}
                </div>
            </div>
            <div class="row">
                <div class="section col-md-6">
                    <h3>{{rollAdvantage.heading}}</h3>
                    {{{rollAdvantage.content}}}
                </div>
                <div class="section col-md-6">
                    <h3>{{cmCheck.heading}}</h3>
                    {{{cmCheck.content}}}
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}
