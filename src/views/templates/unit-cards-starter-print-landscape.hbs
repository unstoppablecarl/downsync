{{#extend 'layout/html' title='Starter Unit Cards Print' body_class="body-print"}}

    {{#content 'page-content'}}
        <style>
            @media print {
                @page {
                    size: letter landscape
                }
            }
        </style>
        <div class="page-previews-top-container">
            <div class="container">
                <h1>Downsync Starter Sets</h1>

                {{> starter-set-top-content}}

                <div class="row">
                    <div class="col">
                        <a href="/unit-cards-starter-print.html" class="btn btn-secondary">Switch To Portrait</a>
                    </div>
                    <div class="col">
                        <p class="text-end">
                            {{> btn-print}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-previews-container">
            <div class="output-container card-grid-container-flex-landscape-print">
                {{#each cardPages as |cardPage|}}

                    <div class="page-preview page-letter-landscape" style="background-color:white">
                        <div class="page-card-grid">
                            {{#each cardPage as |cardData|}}
                                {{> (lookup cardData 'template') cardData}}
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/content}}

{{/extend}}
